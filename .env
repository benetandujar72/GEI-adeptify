# ========================================
# GESTOR ESCOLAR INTEL·LIGENT (GEI)
# Variables d'Entorn d'Exemple
# ========================================

# ========================================
# CONFIGURACIÓ GENERAL
# ========================================
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:3001

# ========================================
# BASE DE DADES
# ========================================
# PostgreSQL
DATABASE_URL=postgresql://postgres:password@localhost:5432/gei_db
POSTGRES_DB=gei_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password

# Redis
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password

# MongoDB
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=password
MONGO_DATABASE=gei_analytics
MONGO_URL=mongodb://admin:password@localhost:27017/gei_analytics

# Elasticsearch
ELASTICSEARCH_URL=http://localhost:9200
ELASTIC_PASSWORD=your-elastic-password

# ========================================
# AUTENTICACIÓ I SEGURETAT
# ========================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=your-refresh-token-secret
REFRESH_TOKEN_EXPIRES_IN=30d

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3001/auth/google/callback

# ========================================
# IA I SERVEIS EXTERNS
# ========================================
# Google Gemini API
GEMINI_API_KEY=your-gemini-api-key

# ========================================
# COMUNICACIONS
# ========================================
# Email (SendGrid)
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@gei.edu
SENDGRID_FROM_NAME=GEI - Gestor Escolar Intel·ligent

# SMS (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# WhatsApp (Twilio)
TWILIO_WHATSAPP_NUMBER=whatsapp:+1234567890

# ========================================
# INTEGRACIONS EDUCATIVES
# ========================================
# Google Workspace for Education
GOOGLE_WORKSPACE_DOMAIN=your-school.edu
GOOGLE_CALENDAR_ID=primary

# Microsoft Teams
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret
MICROSOFT_TENANT_ID=your-microsoft-tenant-id

# Canvas/Moodle
CANVAS_API_URL=https://your-school.instructure.com
CANVAS_API_TOKEN=your-canvas-api-token

# ========================================
# PAGAMENTS
# ========================================
# Stripe
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# ========================================
# MONITORATGE I LOGS
# ========================================
# Sentry
SENTRY_DSN=your-sentry-dsn

# LogRocket
LOGROCKET_APP_ID=your-logrocket-app-id

# ========================================
# DESPLEGAMENT
# ========================================
# Frontend URLs
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_WS_URL=ws://localhost:3001

# ========================================
# CONFIGURACIÓ ESPECÍFICA PER A CENTRES EDUCATIUS
# ========================================
# Configuració multi-tenant
DEFAULT_SCHOOL_ID=1
DEFAULT_SCHOOL_NAME="Escola Example"
DEFAULT_SCHOOL_TIMEZONE=Europe/Madrid

# Configuració d'idiomes
DEFAULT_LANGUAGE=ca
SUPPORTED_LANGUAGES=ca,es,en,fr

# Configuració de notificacions
NOTIFICATION_EMAIL_ENABLED=true
NOTIFICATION_SMS_ENABLED=false
NOTIFICATION_PUSH_ENABLED=true
NOTIFICATION_WHATSAPP_ENABLED=false

# Configuració de gamificació
GAMIFICATION_ENABLED=true
GAMIFICATION_POINTS_MULTIPLIER=1.0

# Configuració d'analytics
ANALYTICS_ENABLED=true
ANALYTICS_RETENTION_DAYS=365

# ========================================
# CONFIGURACIÓ DE DESENVOLUPAMENT
# ========================================
# Debug
DEBUG=true
LOG_LEVEL=debug

# CORS
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ========================================
# CONFIGURACIÓ DE PRODUCCIÓ
# ========================================
# Canvia aquestes variables en producció
# NODE_ENV=production
# DEBUG=false
# LOG_LEVEL=info
# CORS_ORIGIN=https://your-domain.com 