# =============================================================================
# GEI ADEPTIFY - ENVIRONMENT CONFIGURATION
# =============================================================================

# Application
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:3000

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/gei_db
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=password
DATABASE_NAME=gei_db

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# JWT Configuration
JWT_SECRET=gei-super-secret-jwt-key-development-2024
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=gei-refresh-secret-development-2024
JWT_REFRESH_EXPIRES_IN=30d

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3001/auth/google/callback

# Google Gemini AI Configuration
GEMINI_API_KEY=your-gemini-api-key
GEMINI_MODEL=gemini-pro

# Email Configuration (Nodemailer)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USER=your-email@gmail.com
MAIL_PASS=your-app-password
MAIL_FROM=noreply@gei-adeptify.com

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# File Upload Configuration
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf,application/msword

# Elasticsearch Configuration
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=changeme

# MongoDB Configuration (for analytics)
MONGODB_URL=mongodb://admin:password@localhost:27017/gei_analytics?authSource=admin

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Cors Configuration
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# WebSocket Configuration
WS_PORT=3002
WS_ORIGIN=http://localhost:3000

# Development Tools
LOG_LEVEL=debug
ENABLE_SWAGGER=true
ENABLE_PLAYGROUND=true

# Production Overrides (commented for development)
# NODE_ENV=production
# DATABASE_SSL=true
# REDIS_TLS=true
# LOG_LEVEL=info
# ENABLE_SWAGGER=false