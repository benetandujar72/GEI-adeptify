
# ===========================================
# üéì GEI ADEPTIFY - ENVIRONMENT CONFIGURATION EXAMPLE
# ===========================================
# Copy this file to .env and fill in your actual values

# Application Settings
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:3000
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# ===========================================
# üìä DATABASE CONFIGURATION
# ===========================================

# PostgreSQL Database
DATABASE_URL=postgresql://username:password@localhost:5432/database_name
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=your_password_here
DATABASE_NAME=gei_adeptify_db
DATABASE_SSL=false

# ===========================================
# üîÑ REDIS CONFIGURATION
# ===========================================

REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_TLS=false

# ===========================================
# üîê JWT AUTHENTICATION
# ===========================================

JWT_SECRET=your_very_long_and_secure_jwt_secret_here_minimum_32_characters
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your_very_long_and_secure_refresh_secret_here_minimum_32_characters
JWT_REFRESH_EXPIRES_IN=30d

# ===========================================
# üåê GOOGLE OAUTH (OPTIONAL FOR DEVELOPMENT)
# ===========================================

GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_CALLBACK_URL=http://localhost:3001/auth/google/callback

# ===========================================
# ü§ñ GEMINI AI CONFIGURATION
# ===========================================

GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-pro

# ===========================================
# üìß EMAIL CONFIGURATION
# ===========================================

MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USER=your_email@gmail.com
MAIL_PASS=your_app_password_here
MAIL_FROM=noreply@gei-adeptify.com

# ===========================================
# üì± TWILIO SMS CONFIGURATION (OPTIONAL)
# ===========================================

TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# ===========================================
# üîí SECURITY SETTINGS
# ===========================================

BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# ===========================================
# üìã LOGGING & DEBUG
# ===========================================

LOG_LEVEL=info
ENABLE_SWAGGER=true
ENABLE_PLAYGROUND=true

# ===========================================
# üìé FILE UPLOAD SETTINGS
# ===========================================

UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf

# ===========================================
# üîç EXTERNAL SERVICES
# ===========================================

ELASTICSEARCH_URL=http://localhost:9200
MONGODB_URL=mongodb://localhost:27017/gei_adeptify
